    <div class="gridRight">
        <label for="" class="lblMusic">Chủ đề HOT</label>
        <div id="cateList">
            <ul>
                @foreach (var item in randomCate)
                {
                    <li><a href="@Url.Action("Index","listPlaylistByCate", new { id = item.ID})">@item.CateName</a></li>
                }
