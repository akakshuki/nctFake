@model ModelViews.DTOs.LyricsMusicDTO
@using ModelViews.DTOs
@{
    ViewBag.Title = "ViewCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<MusicDTO> list = ViewBag.Music;
    MusicDTO music = ViewBag.getMusicId;
}
@section js
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $('.select2').select2();
    </script>
}
<h2>Add Lyrics</h2>
<div class="form-panel">
    @using (Html.BeginForm("Create", "LyricsMusic", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Music : @music.MusicName</label>
                <div class="col-md-10">
                    <div>
                        <input type="hidden" name="MusicID" value="@music.ID" />
                        @Html.ValidationMessageFor(model => model.MusicID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-lg-2">Detail Lyric</label>
                <div class="col-md-10">
                    <textarea class="form-control" style="height: 150px;" id="ccomment" name="LMusicDetail" required></textarea>
                    @Html.ValidationMessageFor(model => model.LMusicDetail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-theme" type="submit"><i class="fa fa-heart"></i> Add</button>
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index", "Music")
    </div>
</div>

