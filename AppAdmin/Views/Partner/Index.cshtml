@model ModelViews.DTOs.PartnerDTO
@using ModelViews.DTOs
@{
    ViewBag.Title = "Partner";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<PartnerDTO> list = ViewBag.ListPartner;
}
@section js
{
    <script src="@Url.Content("~/Content/Dashio/")lib/jquery-ui-1.9.2.custom.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Dashio/")lib/bootstrap-fileupload/bootstrap-fileupload.js"></script>
    <script src="@Url.Content("~/Content/Dashio/")lib/advanced-form-components.js"></script>
}
<h2>Partner</h2>

<div class="container-fluid">
    <div class="row mt">
        <div class="col-lg-12">
            <h4><i class="fa fa-angle-right"></i> Add Partner</h4>
            <div class="form-panel">
                <div class=" form">
                    <form class="cmxform form-horizontal style-form" id="commentForm" method="post" action="@Url.Action("Create","Partner")"  enctype = "multipart/form-data">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Name Partner</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="cname" name="PartnerName" minlength="2" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Link</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="PartnerLink" required />
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="control-label col-lg-2">Image Upload</label>
                            <div class="col-md-9">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                        <img src="http://www.placehold.it/200x150/efefef/aaaaaa&text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
                                        <span class="btn btn-theme02 btn-file">
                                            <span class="fileupload-new"><i class="fa fa-paperclip"></i> Select image</span>
                                            <span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
                                            <input name="FileImage" type="file" class="default" accept=".png,.jpg" />
                                        </span>
                                        <a href="@Url.Action("Index","Partner")" class="btn btn-theme04 fileupload-exists" data-dismiss="fileupload"><i class="fa fa-trash-o"></i> Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-theme" type="submit"><i class="fa fa-heart"></i> Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /form-panel -->
        </div>
        <!-- /col-lg-12 -->
    </div>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i>List Partner</h4>
                    <hr>
                    <thead>
                        <tr>
                            <th><i class="fa fa-bullhorn"></i> Partner name</th>
                            <th> Image</th>
                            <th> Link</th>
                            <th> Active</th>
                            <th> Day create</th>
                        </tr>
                    </thead>
                    @foreach (var item in list)
                    {
                        <tbody>
                            <tr>
                                <td>@item.PartnerName</td>
                                <td>@item.PartnerImage</td>
                                <td><span class="label label-info label-mini">@item.PartnerLink</span></td>
                                <td><span class="label label-info label-mini">@item.PartnerActive</span></td>
                                <td>@item.PartnerDayCreate</td>
                                <td>
                                    <a href="@Url.Action("Edit","Partner", new { id = item.ID})">
                                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                    </a>
                                    <a href="@Url.Action("Delete","Partner", new { id = item.ID})">
                                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
</div>



