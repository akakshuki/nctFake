<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Vendo/css/tree-viewer.css">
    <link rel="stylesheet" href="~/Content/Vendo/css/style.css">
</head>
<body>


    <div class="wrapper">
        <div class="left-side">
            <div class="logo">
                <img src="img/logo.png" alt="" />
            </div>
            <div class="left-content">
                @RenderPage("NavigateMenu.cshtml")
            </div>
            <div class="copyright">
                <p>Copyright &#169; 2018 </p>
            </div>
        </div>
        <div class="right-side">
            <div class="right-content">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/Vendo/js/jstree.min.js"></script>
    <script src="~/Content/Vendo/js/jstree.active.js"></script>
    <script src="~/Content/Vendo/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
