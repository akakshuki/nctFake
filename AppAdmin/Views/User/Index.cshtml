@model ModelViews.DTOs.UserDTO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section js
{
        <script src="@Url.Content("~/Content/Dashio/")lib/jquery-ui-1.9.2.custom.min.js"></script>
        <script type="text/javascript" src="@Url.Content("~/Content/Dashio/")lib/bootstrap-fileupload/bootstrap-fileupload.js"></script>
        <script type="text/javascript" src="@Url.Content("~/Content/Dashio/")lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
        <script src="@Url.Content("~/Content/Dashio/")lib/advanced-form-components.js"></script>
}
<div class="container-fluid">
    <div class="row mt">
        <div class="col-lg-12">
            <h4><i class="fa fa-angle-right"></i> Add Singer</h4>
            <div class="form-panel">
                <div class=" form">
                    <form class="cmxform form-horizontal style-form" id="commentForm" method="post" action="@Url.Action("CreateSinger","User")" enctype = "multipart/form-data">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Name Singer</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="cname" name="UserName" minlength="2" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Name Unsigned</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="UserNameUnsigned" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="curl" class="control-label col-lg-2">Gender</label>
                            <div class="col-lg-10">
                                <div>
                                    <div><input type="radio" name="UserGender" value="true"> Male<br></div>
                                    <div style="margin-top: 10px;"><input type="radio" name="UserGender" value="false"> Female<br></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2">Date of birth</label>
                            <div class="col-md-3 col-xs-11">
                                <div data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="01-01-2014" class="input-append date dpYears">
                                    <input name="UserDOB" type="text" readonly="" value="" size="16" class="form-control">
                                    <span class="input-group-btn add-on">
                                        <button class="btn btn-theme" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="ccomment" class="control-label col-lg-2">Description</label>
                            <div class="col-lg-10">
                                <textarea class="form-control " id="ccomment" name="UserDescription" required></textarea>
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="control-label col-lg-2">Image Upload</label>
                            <div class="col-md-9">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                        <img src="http://www.placehold.it/200x150/efefef/aaaaaa&text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
                                        <span class="btn btn-theme02 btn-file">
                                            <span class="fileupload-new"><i class="fa fa-paperclip"></i> Select image</span>
                                            <span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
                                            <input name="FileImage" type="file" class="default" accept=".png,.jpg" />
                                        </span>
                                        <a href="@Url.Action("Index","User")" class="btn btn-theme04 fileupload-exists" data-dismiss="fileupload"><i class="fa fa-trash-o"></i> Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-theme" type="submit"><i class="fa fa-heart"></i> Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /form-panel -->
        </div>
        <!-- /col-lg-12 -->
    </div>
</div>

