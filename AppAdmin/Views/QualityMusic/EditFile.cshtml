@model ModelViews.DTOs.QualityMusicDTO
@using ModelViews.DTOs
@{
    ViewBag.Title = "EditFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<QualityDTO> list = ViewBag.getQuanlity;
}

<h2>Edit </h2>
<div class="container">
    @using (Html.BeginForm("UpdateFile", "QualityMusic", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal form-panel">
            <hr />
            <input type="hidden" name="ID" value="@Model.ID" />
            <input type="hidden" name="MusicID" value="@Session["idM"]" />
            <div class="form-group">
                @Html.LabelFor(model => model.QMusicApproved, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox" style="margin-left: 20px;">
                        @Html.EditorFor(model => model.QMusicApproved)
                        @Html.ValidationMessageFor(model => model.QMusicApproved, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <div class="checkbox" style="margin-left: 20px;">
                        <div class="hidden">
                            <select hidden="hidden" name="QualityID" id="UserId" class="form-control select2">
                                @foreach (var item in list)
                                {
                                    if (item.ID == Model.QualityID)
                                    {
                                        <option selected="selected" value="@item.ID">@item.QualityName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ID">@item.QualityName</option>
                                    }
                                }
                            </select>
                        </div>
                       
                        @Html.ValidationMessageFor(model => model.QMusicApproved, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-theme" type="submit"><i class="fa fa-heart"></i> Save</button>
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "ListFile", "QualityMusic")
</div>