@model ModelViews.DTOs.QualityMusicDTO
@using ModelViews.DTOs
@{
    ViewBag.Title = "EditFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<QualityDTO> list = ViewBag.getQuanlity;
}

<h2>Edit </h2>
<div class="container">
    @*@using (Html.BeginForm("UpdateFile", "QualityMusic", FormMethod.Post))
    {*@
        @Html.AntiForgeryToken()
    <div class="form-horizontal form-panel">
        <hr />
        <input type="hidden" name="ID" value="@Model.ID" />
        <input type="hidden" name="MusicID" value="@Session["idM"]" />
        <div class="form-group">
            <label class="control-label col-md-2"> Image</label>
            <div class="col-md-8">
                <div class="default">
                    <img style="width: 150px;" src="@Model.MusicDto.LinkImage" alt="" />
                    @Html.ValidationMessageFor(model => model.QMusicApproved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Singer</label>
            <div class="col-md-8">
                <div class="default">
                    @foreach (var item in Model.MusicDto.SingerMusicDtOs)
                    {
                        if (Model.MusicDto.SingerMusicDtOs.IndexOf(item) + 1 == Model.MusicDto.SingerMusicDtOs.Count)
                        {
                            <a href="#">@item.UserDto.UserName.</a>
                        }
                        else
                        {
                            <a href="#">@item.UserDto.UserName,</a>
                        }
                    }

                    @Html.ValidationMessageFor(model => model.QMusicApproved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Category</label>
            <div class="col-md-8">
                <div class="default">
                    <Label style="margin-top: 10px;">@Model.MusicDto.CategoryDto.CateName</Label>
                    @Html.ValidationMessageFor(model => model.QMusicApproved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Audio</label>
            <div style=" margin-top: 15px;" class="col-md-8">
                <div class="default">
                    @if (Model.MusicDto.SongOrMV == true)
                    {
                        <audio  autoplay controls id="myAudio">
                            <source  src="@Model.LinkFile" type="audio/mpeg">
                        </audio>
                    }
                    else
                    {
                        <video style="width: 350px;" autoplay controls id="myAudio">
                            <source  src="@Model.LinkFile" type="audio/mpeg">
                        </video>
                    }

                    @Html.ValidationMessageFor(model => model.QMusicApproved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <a href="@Url.Action("UpdateFile","QualityMusic", new { id = Model.ID})" class="btn btn-theme"><i class="fa fa-heart"></i> Approved</a>
                <a href="@Url.Action("DelFileAndTableRelated","QualityMusic", new { id = Model.ID})" class="btn  btn-danger" style="margin-left: 130px;">No Approved (Del)</a>
            </div>
        </div>
    </div>
    @*  *@
</div>

<div>
    @Html.ActionLink("Back to List", "ListFile", "QualityMusic")
</div>